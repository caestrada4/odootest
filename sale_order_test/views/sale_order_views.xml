<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_inherit_carlos" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.carlos</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="x_validez" />
                <field name='x_metodo_pago' />

            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="x_nota_cotizacion" />

            </xpath>
        </field>
    </record>
    <record id="view_order_tree_inherit_carlos" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.carlos</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="x_validez" />
                <field name='x_metodo_pago' />
            </xpath>
        </field>

    </record>
    <record id='view_order_tree_inherit_carlos_quotes' model='ir.ui.view'>
        <field name='name'>sale.order.tree.inherit.carlos.quotes</field>
        <field name='model'>sale.order</field>
        <field name='inherit_id' ref='sale.view_quotation_tree' />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="x_validez" />
                <field name='x_metodo_pago' />
            </xpath>
        </field>

    </record>
    <record id='view_order_form_amortizacion' model='ir.ui.view'>
        <field name='name'>sale.order.form.amortizacion</field>
        <field name='model'>sale.order</field>
        <field name='inherit_id' ref='sale.view_order_form' />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='x_metodo_pago']" position="after">
                <field name='x_tabla_amortizacion' widget="html" />
                
            </xpath>
        </field>

    </record>
    
</odoo>